@page
@model crudsweb3.Pages.DeleteModel
@{
    ViewData["Title"] = "Eliminar tarea";
}

<div class="container py-4">
    <h1 class="h3 mb-3">Eliminar tarea</h1>

    <div class="alert alert-warning" role="alert">
        <strong>¿Estás seguro que deseas eliminar esta tarea?</strong> Esta acción no se puede deshacer.
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Tarea.nombreTarea)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Tarea.nombreTarea)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Tarea.fechaVencimiento)</dt>
                <dd class="col-sm-9">
                    @{
                        var mostrado = string.Format("{0:dd/MM/yyyy HH:mm}", Model.Tarea.fechaVencimiento);
                    }
                    @mostrado
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Tarea.estado)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Tarea.estado)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Tarea.IdUsuario)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Tarea.IdUsuario)</dd>
            </dl>
        </div>
    </div>

    <form method="post" class="d-flex gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Tarea.Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-outline-secondary">Volver a la lista</a>
    </form>
</div>
