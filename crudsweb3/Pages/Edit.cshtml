@page
@model crudsweb3.Pages.EditModel

@{
    ViewData["Title"] = "Editar tarea";
}

<div class="container py-4">
    <h1 class="h3 mb-3">Editar tarea</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Tarea.Id" />

                <div class="mb-3">
                    <label asp-for="Tarea.nombreTarea" class="form-label"></label>
                    <input asp-for="Tarea.nombreTarea" class="form-control" placeholder="Ej: Comprar insumos" />
                    <span asp-validation-for="Tarea.nombreTarea" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tarea.fechaVencimiento" class="form-label"></label>
                    <input asp-for="Tarea.fechaVencimiento" type="datetime-local" class="form-control" />

                    <span asp-validation-for="Tarea.fechaVencimiento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tarea.estado" class="form-label"></label>
                    <input asp-for="Tarea.estado" class="form-control" placeholder="Ej: Pendiente / Activo / Inactivo" />
                    <span asp-validation-for="Tarea.estado" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Tarea.IdUsuario" class="form-label"></label>
                    <input asp-for="Tarea.IdUsuario" class="form-control" />
                    <span asp-validation-for="Tarea.IdUsuario" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-page="./Index" class="btn btn-outline-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
