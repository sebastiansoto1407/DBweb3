                @Html.DisplayNameFor(model => model.Tarea[0].nombreTarea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarea[0].fechaVencimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarea[0].estado)
